<div class="container-lg d-flex justify-content-center align-items-center row mx-auto">


  <h2 class="col-12 text-center font-weight-bold" style="margin-top: 4rem;">Profilini Düzenle </h2>
  <div class="col-lg-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data:{turbo:true}})do |f| %>
    <div style= "display: none;">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>



      <div class="form-group text-center">
        <div class="row">
          <div class="col-12">
            <%= image_tag user_avatar(resource), class: "rounded-circle" %>
          </div>
          <div class="col-12 mt-3">
            <label class="btn btn-dark">
                Dosya Seçin
            <span style="display:none;">
              <%= f.file_field :avatar%>
            </span>
</label>
          </div>
        </div>
      </div>

  <div data-controller="hidden-field" class="row justify-content-center">

        <button data-action="click->hidden-field#emailHide" class="btn btn-info col-10"> Email </button>
        <div class="field form-group col-12 mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", data:{"hidden-field-target":"email"}, class:"hidden-field form-control form-email"%>
        </div>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <button data-action="click->hidden-field#passwordHide" class="btn btn-info col-10"> Şifre </button>
        <div class="field form-group col-12 mt-2">
          <% if @minimum_password_length %>
           <%= f.password_field :password, data:{"hidden-field-target":"password"}, placeholder:"Şifrenizi Giriniz (Min. ".concat(@minimum_password_length.to_s)+ " Karakter)", class:"hidden-field form-control form-password"%>
         <% end %>
        </div>

        <div class="field form-group col-12">
          <%= f.password_field :password_confirmation, data:{"hidden-field-target":"password_confirmation"}, class:"hidden-field form-control form-password", placeholder:"Şifrenizi Tekrar Giriniz"%>
        </div>

  </div>





  </div>
  <div class="col-lg-6 justify-content-end align-items-center">
      <div class="field form-group">
        <%= f.label "İsim" %>
        <%= f.text_field :name, class:"form-control", autocomplete:"name"%>
      </div>
      <div class="field form-group">
        <%= f.label "Soyisim" %>
        <%= f.text_field :surname, class:"form-control", autocomplete:"surname"%>
      </div>
      <div class="field form-group">
        <%= f.label "Telefon" %>
        <%= f.text_field :phone, class:"form-control", autocomplete:"phone"%>
      </div>
      <div class="field form-group">
        <%= f.label "Okul Numarası" %>
        <%= f.text_field :schoolNumber, class:"form-control", autocomplete:"schoolNumber"%>
      </div>
    </div>
    <div class="col-12 mt-4">
      <div class="field form-group">
        <%= f.label "*Güncellemek İçin Mevcut Şifrenizi Giriniz".titleize %>
        <%= f.password_field :current_password, class:"form-control"%>
      </div>
    <div class="d-flex justify-content-between" id= "edit-user-buttons">

    <div id="update-back-buttons">

        <div class="actions">
          <%= f.submit "Güncelle", class:"btn btn-info",data:{turbo_action: "replace"}%>
        </div>
      <% end %>

      <div>
         <%= link_to "Ana Sayfaya Geri Dön", root_path, class:"btn btn-dark mt-2", data:{turbo_action: "replace"}%>
      </div>


    </div>



     <%= button_to "Hesabımı Sil", registration_path(resource_name),  form: { data: { turbo_confirm: "Hesabınızı Silmek İstediğinize Emin Misiniz?" } }, method: :delete, class:"btn btn-danger mt-2", id:"user-cancel-btn", data:{turbo_action: "replace"}%>
    </div>

  </div>



  </div>


</div>
